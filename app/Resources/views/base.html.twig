<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8"/>
        <title>{% block title %}Karopapier{% endblock %} - Autofahren wie in der Vorlesung</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
        <link rel="stylesheet" type="text/css" href="//www.karopapier.de/css/karo.css">
        <link rel="stylesheet" href="//2.karopapier.de/css/Karopapier.min.css">
        <link rel="stylesheet" href="//www.karopapier.de/themes/karo1/css/theme.css">
        <script type="text/javascript" src="/js/libs/jquery-1.11.2.min.js?v=3"></script>
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
        {% block headjavascripts %}{% endblock %}

        <style type="text/css">
            @keyframes wobble {
                0% {
                    -webkit-transform: rotate(0deg) scale(1);;
                }
                5% {
                    -webkit-transform: rotate(5deg) scale(1.5);;
                }
                10% {
                    -webkit-transform: rotate(-5deg) scale(1.5);
                }
                15% {
                    -webkit-transform: rotate(5deg) scale(1.5);
                }
                20% {
                    -webkit-transform: rotate(-5deg) scale(1.5);
                }
                30% {
                    -webkit-transform: rotate(0deg) scale(1);;
                }
            }

            .unread {
                animation: wobble 2s infinite;
            }
        </style>

    </head>
    <header id="header">
        <div id="userInfoBar">
            {% if app.user %}
                <span class="userLabel">{{ app.user.login }}</span>
                <small>(<a href="/dran.html">{{ app.user.nbDran }}</a>/<a href="http://www.karopapier.de/showgames.php?spielevon=1">{{ app.user.nbGames }}</a>)
                </small>
                {% if uc >0 %}
                    <div class="unread" style="display: inline-block"><a href="/zettel">{{ getUnreadCounter(app.user) }}</a></div>
                {% endif %}
                <a href="/logout">Logout</a>
            {% else %}
                <a href="/login">Logout</a>
            {% endif %}
        </div>
    </header>
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
    <footer>
        {% include ("footer.html.twig") %}
    </footer>
    <!-- Piwik -->
    <script type="text/javascript">
        var pkBaseURL = "//stats.karopapier.de/";
        pkBaseURL = "//www.karopapier.de/piwik/";
        document.write(unescape("%3Cscript src='" + pkBaseURL + "piwik.js' type='text/javascript'%3E%3C/script%3E"));
    </script>
    <script type="text/javascript">
        piwik_action_name = '';
        piwik_idsite = 1;
        piwik_url = pkBaseURL + "piwik.php";
        piwik_log(piwik_action_name, piwik_idsite, piwik_url);
    </script>
    <object>
        <noscript><p>Web analytics
                <img src="//www.karopapier.de/piwik/piwik.php?idsite=1" style="border:0" alt=""/></p></noscript>
    </object>
    <!-- End Piwik Tag -->
    <script type="text/javascript">
        if (!/karopapier/.test(window.location.hostname)) {
            document.write('<scr' + 'ipt src="//www.panamapapier.de:20000/livereload.js"></scr' + 'ipt>');
        }
    </script>
</html>

