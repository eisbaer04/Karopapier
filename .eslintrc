// Use this file as a starting point for your project's .eslintrc.
// Copy this file, and add rule overrides as needed.
{
  "extends": "google",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "padded-blocks": [
      2,
      {
        "classes": "always",
        "blocks": "never"
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "max-len": [
      "error",
      120
    ],
    "require-jsdoc": "off",
    "valid-jsdoc": "off",
    "guard-for-in": "off",
    "prefer-rest-params": "off",
    "prefer-arrow-callback": "error",
    "object-shorthand": "error"
  }
}
